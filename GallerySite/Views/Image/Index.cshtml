@model IEnumerable<ImageModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="text-center">
<h1>Images</h1>
</div>
    <div class="container">
    <div class="row">
@foreach(var item in Model)
{
    <div class="card text-white bg-primary m-3" style="width: 18rem;">
  <img class="card-img-top" src="@item.ThumbnailUrl" alt="Card image cap">
  <div class="card-body">
    <div class="text-center">
    <h5 class="card-title">@item.Title</h5>
    <a href="@item.Url" class="btn btn-outline-secondary mb-xxl-2">Full Image</a>
    </div>
  </div>
</div>
}

@{
}
