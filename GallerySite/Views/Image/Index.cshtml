@model IEnumerable<ImageModel>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<div class="text-center">
<h1>Images</h1>
</div>
    <div class="container">
    <div class="row">
@foreach(var item in Model)
{
    <div class="card text-white bg-secondary m-3" style="width: 18rem; min-height:28rem;">
  <img class="card-img-top" src="@item.ThumbnailUrl" alt="Card image cap">
  <div class="card-body d-flex flex-column">
    
    <h5 class="card-title text-center">@item.Title</h5>
    
    <button type="button" href="@item.Url" class="mt-auto btn btn-primary ">Full Image</button>
  </div>
</div>
}

@{
}
