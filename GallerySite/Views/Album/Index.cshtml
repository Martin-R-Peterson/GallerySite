
@model IEnumerable<AlbumModel>

@*//*@


<section class="text-center" style="padding:4rem 2rem">
        <div class="container">
          <h1 class="heading">Albums</h1>
          <p class="lead text-muted">Here is a short example of Albums collected from Jsonplaceholder. Visit them to view all their pictures. </p>
          <p>
           <form class="d-flex" >
        <input class="form-control me-sm-2" type="text" name="searchQuery" maxlength="100"  placeholder="Search" >
        <button  asp-action="Index"   class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
         </form>
            <a type="button" class="btn btn-primary mt-2 "  asp-action="Index" asp-route-sort="@ViewData["NameSortParm"]">Sort All Alphabetically</a>
          </p>
        </div>
      </section>
<div class="container">

  
<div class="row">


@foreach(var item in Model)
{
              
                <div class="col-4 mw-100  align-items-stretch py-3">
            <div class="card text-white bg-secondary mb-3d mx-auto" style="width: 20rem; min-height: 10rem;">
            <h5 class="card-header">@item.Title</h5>
            <div class="card-body d-flex flex-column">
            <a asp-controller="Image" asp-action="Index" asp-route-id="@item.Id" class="mt-auto btn btn-primary">To Album</a>
            </div>
            </div>
            </div>
}

  </div>
  </div>
  



