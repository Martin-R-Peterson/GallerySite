@model IEnumerable<AlbumModel>
@{
    ViewData["Title"] = "Albums";
}

<a asp-action="Index" asp-route-sort="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Title)">Albums</a>
@foreach(var item in Model)
{
    <div class="flex-wrap">
    <div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@item.Title</h5>
    <a asp-controller="Image" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">To Album</a>
  </div>
</div>
</div>

}


